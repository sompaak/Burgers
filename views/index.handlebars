<h1>Eat-Da-Burger!</h1>

<img src="/assets/images/logo.jpeg">


<div class="row">
	<div class="col-md-6">

		<h3>AVAILABLE BURGERS</h3>
		  <ul>
			  {{#each burgers}}
			  	   {{#unless this.devoured}}
				    	<p>{{this.burger_name}}<p>
				    	<img id="not-eaten" src="/assets/images/burger.jpg">
				    	<button class="update-burger" data-id="{{this.id}}">devour it</button>
				  {{/unless}}    
			  {{/each}}
			</ul>
	</div>
	
	<div class="col-md-6">
		<h3> EATEN BURGERS</h3>

			<ul>
			  {{#each burgers}}
			  	   {{#if this.devoured}}
				    	<p>{{this.burger_name}}<p>
				    	<img id="eaten" src="/assets/images/burger.jpg">
				    	
				  {{/if}}    
			  {{/each}}
			</ul>
		</div>

</div>

<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<form class="create-form">
			<div class="form-group">
		      <label for="usr">INPUT A BURGER</label>
		      <input type="text" class="form-control" id="burger_name">
		    </div>
		    <br>
		    <button type="submit" id="burger_submit" class="btn btn-danger"><h3>submit</h3></button>
		</form>
	</div>
</div>
